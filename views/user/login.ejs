<style>
    .form-container {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px #000;
    }
    
    .container-fluid {
        padding-top: 250px;
        padding-bottom: 80px;
    }
</style>
<section class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-7 col-md-3">


            <form class="form-container" action="/user/login" class="form-inline ajax" method="POST">

                <div class="form-group">
                    <span><label for="exampleInputEmail1">Email:</label></span>
                    <input type="email" class="form-control" id="loginEmail" aria-describedby="emailHelp" name="email">
                </div>

                <div class="form-group">
                    <label forfor="exampleInputPassword1">Password:</label>
                    <input type="password" class="form-control" id="loginPassword" name="password">
                </div>

                <button type="submit" class="btn btn-primary btn-block">登入</button><br><br>



            </form>



        </div>
    </div>


</section>

<script>
    async function submitForm(oFormElement) {


        var response = await fetch(oFormElement.action, {
            method: oFormElement.method,
            credentials: 'same-origin',
            body: new FormData(oFormElement),
        });


        if (response.ok) {
            var data = await response.json(); // for res.ok() or res.json()
            alert(data.message);
            window.location = data.url;

        } else if (response.status == 401) {
            var data = await response.text(); // for res.send()
            alert(data);
        } else {
            alert(response.statusText);
        }

    };
</script>